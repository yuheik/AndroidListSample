<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScrollTab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/scroll_tab_height</item>
        <item name="android:background">@color/scroll_tab_background_color</item>
        <item name="tabBackground">@color/scroll_tab_background_color</item>
        <item name="tabSelectedTextColor">@color/scroll_tab_text_select_color</item>
        <item name="tabTextColor">@color/scroll_tab_text_normal_color</item>
        <item name="tabIndicatorColor">@color/scroll_tab_indicator_color</item>
        <item name="tabTextAppearance">@style/ScrollTabText</item>
    </style>

    <style name="ScrollTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
    </style>

</resources>
